{%- assign fullwidth = section.settings.fullwidth -%}
{%- assign bottom_padding = section.settings.bottom_padding -%}
{%- assign dots = section.settings.dots -%}
{%- assign speed = section.settings.speed -%}
{%- assign blocks = section.blocks -%}
{%- assign heading_color = section.settings.heading_color -%}
{%- assign heading_font_size = section.settings.heading_font_size -%}
{%- assign subheading_color = section.settings.subheading_color -%}
{%- assign subheading_font_size = section.settings.subheading_font_size -%}
{%- assign button_bg_color = section.settings.button_bg_color -%}
{%- assign button_text_color = section.settings.button_text_color -%}
{%- assign button_font_size = section.settings.button_font_size -%}
{%- assign is_mobile = true -%}

{%- if blocks.size > 0 -%}
	{%- include 'slideshow' with
		fullwidth: fullwidth
		bottom_padding: bottom_padding
		dots: dots
		speed: speed
		blocks: blocks
		heading_color: heading_color
		heading_font_size: heading_font_size
		subheading_color: subheading_color
		subheading_font_size: subheading_font_size
		button_bg_color: button_bg_color
		button_text_color: button_text_color
		is_mobile: is_mobile -%}
{%- endif -%}

