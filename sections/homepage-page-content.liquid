{% assign page = pages[section.settings.page] %}

{% if page != blank %}
	<div class="container-fluid">
		<div class="row">
			<div class="container">
				<h2 class="section_title"> {{ page.title }}</h2>

				{{ page.content }}
			</div>
		</div>
	</div>
{% endif %}

{% schema %}
{
	"name": "Custom Page Section",
	"class": "index-section cole",
	"settings": [
		{
			"type": "paragraph",
			"content": "This section displays content from any page."
		},
		{
			"type": "page",
			"id": "page",
			"label": "Page"
		}
	],
	"presets": [
		{
			"name": "Custom Page Section",
			"category": "image"
		}
	]
}
{% endschema %}
 