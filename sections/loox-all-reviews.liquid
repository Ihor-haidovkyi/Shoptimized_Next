{% assign data_limit = section.settings.data-limit %}
{% assign only_photos = section.settings.only_photos %}
{% assign max_width = section.settings.maxwidth %}

<div id="looxReviews" data-loox-aggregate
	 data-limit="{{- data_limit -}}"
	 {% if only_photos %}data-mode="img"{% endif %}
	 style="margin:0 auto;max-width:{{- max_width -}}px;"></div>
{% schema %}
{
	"name": "Loox Widget",
	"class": "index-section cole",
	"settings": [
		{
			"id": "only_photos",
			"type": "checkbox",
			"label": "Display only reviews with photos",
			"default": false
		},
		{
			"type": "range",
			"id": "data-limit",
			"min": 1,
			"max": 40,
			"step": 1,
			"label": "Number of reviews to display",
			"default": 20
		},
		{
			"type": "range",
			"id": "maxwidth",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1080
		}
	],
	"presets": [{
		"name": "Loox widget",
		"category": "Loox"
	}]
}
{% endschema %}