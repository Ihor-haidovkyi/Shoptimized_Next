{% assign show_more = section.settings.show_more %}
{% assign max_width = section.settings.max_width %}
{% assign arrows_color = section.settings.arrows_color %}
{% assign dots_color = section.settings.dots_color %}
{% assign button_color = section.settings.button_color %}
{% assign product_handle = section.settings.product_handle %}
{% assign only_photos = section.settings.only_photos %}
{% assign use_widget_font = section.settings.use_widget_font %}

{% if product_handle != blank %}
	<div
			id="looxCarousel"
			data-show-more="{{- show_more -}}"
			data-max-width="{{- max_width -}}"
			data-arrows-color="{{- arrows_color -}}"
			data-dots-color="{{- dots_color -}}"
			data-button-color="{{- button_color -}}"

			{% if product_handle != blank %}data-product-ids="{{- all_products[product_handle].id -}}"{% endif %}
			{% if only_photos %}data-mode="img"{% endif %}
			{% if use_widget_font %}data-use-widget-font="true"{% endif %}

	></div>
{% endif %}

{% schema %}
{
	"name": "Reviews - Carousel",
	"class": "index-section",
	"settings": [
		{
			"type": "range",
			"id": "max_width",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1920
		},
		{
			"id": "arrows_color",
			"type": "color",
			"label": "Arrows color"
		},
		{
			"id": "dots_color",
			"type": "color",
			"label": "Dots color"
		},
		{
			"id": "button_color",
			"type": "color",
			"label": "Button color"
		},
		{
			"id": "show_more",
			"type": "checkbox",
			"label": "Display \"Show more\" button",
			"default": true
		},
		{

			"id": "only_photos",
			"type": "checkbox",
			"label": "Display only reviews with photos",
			"default": false
		},
		{
			"id": "use_widget_font",
			"type": "checkbox",
			"label": "Use widget's font for text reviews",
			"default": false
		},
		{
			"type": "product",
			"id": "product_handle",
			"label": "Use all of this product's reviews:"
		}
	],
	"presets": [{
		"name": "Reviews - Carousel",
		"category": "Loox"
	}]
}
{% endschema %}