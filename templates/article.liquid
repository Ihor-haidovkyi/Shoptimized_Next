    border-radius: 2px;
    background-color: #ced3d3;
    box-sizing: border-box;
}
  .blog-widget-wrapper div#autocomplete-results {
    display: none;
}
.blog-row{
	background: #f7f9fb;
	padding-bottom: 7px;
