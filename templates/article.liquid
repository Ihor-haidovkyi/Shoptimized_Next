    border: 1px solid {{settings.blogbuttoncolortexthover}};
     background: {{settings.blogbuttoncolorhover}} !important;
  }
  
  .blog-text {
    padding: 0 20px;
}
.blog_meta span , .blog_meta a , .blog-excerpt span{
	color : #666;
}
